<!--本の一覧画面-->
<%= render 'devise/shared/left', {user: @user, book: @book} %>

<div>
  <%= flash[:notice] %>
</div>

<!--バリデーション-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<h1>Books</h1>
<table>
  <tr>
  <th>title</th>
  <th>opinion</th>
  </tr>

<% @books.each do |books| %>
<div>
  <td><%= image_tag books.user.get_profile_image(100,100) %></td>
  <td><%= link_to books.title, book_path(books.id) %></td>
  <td><%= books.body %></td>
</div>
</table>
<% end %>