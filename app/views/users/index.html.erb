<%= render 'devise/shared/left', {user: @user, book: @book} %>

<div class = "col-md-8 offset-md-1">

<h1>Users</h1>
<table class="table table-striped">
    <tr>
      <th></th>
      <th>image</th>
      <th>name</th>
    </tr>
    <tr>
  <% @users.each do |user| %>
  <div>
  <td><%= image_tag user.get_profile_image(100,100) %></td>
  <td><%= user.name %></td>
  <td><%= link_to "Show", user_path(current_user.id) %></td>
  </div>
  </tr>
    <% end %>
</table>



</div>