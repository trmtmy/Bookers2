<div class ="col-md-3">


<h1>User Info</h1>
<table class="table table-striped">
  <div>
    <%= image_tag user.get_profile_image(100,100) %>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  </div>
</table>

<div class "row">
<%= link_to "edit", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" %>
<i class="fa-solid fa-user-gear"></i>
</div>

<!--投稿フォーム-->
<h1>New book</h1>
<%= form_with model: book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <div></div>
  <button class = "btn btn-success" type="f.submit" >Creat Book</button>

<% end %>
</div>